%% タイトル
%%
%% '\@maketitle'を変更した。
%% 変更元: jarticle.cls
%% 主な変更点:
%% ・タイトルの上に余白を追加していたのを，しないようにした。
%% ・多値論理フォーラム用のヘッダを追加した。
%% ・ぶちぬきアブストラクトを追加した。
%% ・'\date'は無視するようにした。
\def\@maketitle{%
  \centering
  \let\footnote\thanks
    \@mvlforumheader {\LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
%    \vskip 1em%
%    {\large \@date}%
  \par\vskip 1.5em
  \@myabstract
}

